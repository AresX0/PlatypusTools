<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">
  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <!-- Target .NET 10 for long-term support; requires .NET 10 SDK to build locally -->
    <TargetFramework>net10.0-windows</TargetFramework>
    <AllowMissingPrunePackageData>true</AllowMissingPrunePackageData>
    <UseWPF>true</UseWPF>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <RootNamespace>PlatypusTools.UI</RootNamespace>
  </PropertyGroup>
  <ItemGroup>
    <ProjectReference Include="..\PlatypusTools.Core\PlatypusTools.Core.csproj" />
  </ItemGroup>
</Project>